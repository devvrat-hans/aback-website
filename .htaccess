# Enable URL Rewriting
RewriteEngine On

# Serve index.html for root domain
RewriteRule ^$ index.html [L]

# Redirect /index to root domain
RewriteRule ^index/?$ /? [R=301,L]

# Map clean URLs to pages directory (except for existing files/directories)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/src/
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^(services|whyus|about|careers|contact|privacy|terms|ethics-charter)/?$ /src/pages/$1.html [L]

# Remove .html extension from URLs in pages directory
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Remove .php extension from URLs  
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Redirect direct access to src/pages/ URLs to clean URLs
RewriteCond %{THE_REQUEST} \s/+src/pages/([^?\s]+)\.html[\s?] [NC]
RewriteRule ^ /%1? [R=301,L]

# Redirect .html URLs to clean URLs (except in src directory)
RewriteCond %{THE_REQUEST} \s/+([^?\s]+)\.html[\s?] [NC]
RewriteCond %{REQUEST_URI} !^/src/
RewriteRule ^ /%1? [R=301,L]

# Redirect .php URLs to clean URLs (except for API files)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^ /%1? [R=301,L]

# Handle index files
RewriteCond %{THE_REQUEST} \s/+(.+/)?index\.(html|php)[\s?] [NC]
RewriteRule ^ /%1? [R=301,L]

# Security settings for API directory

# Prevent access to log files
<Files "*.json">
    Order Allow,Deny
    Deny from all
</Files>

# Prevent access to backup files
<Files "*~">
    Order Allow,Deny
    Deny from all
</Files>

# Prevent access to test file (remove after testing)
<Files "test.php">
    Order Allow,Deny
    Deny from all
</Files>

# Prevent access to .htaccess
<Files ".htaccess">
    Order Allow,Deny
    Deny from all
</Files>

# Enable CORS for chat-proxy.php only
<Files "chat-proxy.php">
    Header always set Access-Control-Allow-Methods "POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
</Files>

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Disable server signature
ServerSignature Off
