# Enable URL Rewriting
RewriteEngine On

# Force HTTPS (for production)
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} ^(www\.)?aback\.ai$ [NC]
RewriteRule ^(.*)$ https://aback.ai/$1 [R=301,L]

# Force www removal (canonical URL)
RewriteCond %{HTTP_HOST} ^www\.aback\.ai$ [NC]
RewriteRule ^(.*)$ https://aback.ai/$1 [R=301,L]

# Serve index.html for root domain
RewriteRule ^$ index.html [L]

# Redirect /index, /index.html, and /index/ to root domain
RewriteRule ^index\.html?/?$ /? [R=301,L]
RewriteRule ^index/?$ /? [R=301,L]

# Map clean URLs to pages directory (except for existing files/directories)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/src/
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^(services|whyus|about|careers|contact|blog|privacy|terms|ethics-charter)/?$ /src/pages/$1.html [L]

# Map blog post URLs to pages directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/src/
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^blog-(.+)/?$ /src/pages/blog-$1.html [L]

# Redirect direct access to src/pages/ URLs to clean URLs
RewriteCond %{THE_REQUEST} \s/+src/pages/([^?\s]+)\.html[\s?] [NC]
RewriteRule ^ /%1? [R=301,L]

# Redirect .html URLs to clean URLs (except in src directory)
RewriteCond %{THE_REQUEST} \s/+([^?\s]+)\.html[\s?] [NC]
RewriteCond %{REQUEST_URI} !^/src/
RewriteRule ^ /%1? [R=301,L]

# Remove trailing slashes from non-directory URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Handle specific files that should be accessible
RewriteRule ^(robots\.txt|sitemap\.xml|favicon\.ico)$ - [L]

# Security headers for better SEO and security
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options SAMEORIGIN
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Enable compression for better performance (helps SEO)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Set cache headers for static assets (improves page speed - SEO factor)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
</IfModule>

# Security settings for API directory

# Prevent access to log files
<Files "*.json">
    Order Allow,Deny
    Deny from all
</Files>

# Prevent access to backup files
<Files "*~">
    Order Allow,Deny
    Deny from all
</Files>

# Prevent access to test file (remove after testing)
<Files "test.php">
    Order Allow,Deny
    Deny from all
</Files>

# Prevent access to .htaccess
<Files ".htaccess">
    Order Allow,Deny
    Deny from all
</Files>

# Enable CORS for chat-proxy.php only
<Files "chat-proxy.php">
    Header always set Access-Control-Allow-Methods "POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
</Files>
